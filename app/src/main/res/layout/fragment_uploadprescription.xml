<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".uploadprescription">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="   Prescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E5E5E5"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent" >

        <com.google.android.material.button.MaterialButton
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:layout_marginLeft="109dp"
            android:layout_marginRight="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rec48"
            android:text="Continue"
            android:textColor="@color/green"
            android:textAllCaps="false"
            android:layout_gravity="center"
            />

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="316dp"
        android:layout_height="71dp"
        android:background="@drawable/rec42"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        />

    <View
        android:id="@+id/rec43"
        android:layout_width="316dp"
        android:layout_height="71dp"
        android:background="@drawable/rec43"
        app:layout_constraintTop_toBottomOf="@id/rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="316dp"
        android:layout_height="116dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/rectangle65"
        app:layout_constraintTop_toBottomOf="@id/rec43"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:color="#00C4C4C4"
        />

    <View
        android:id="@+id/ellipse_47"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:background="@drawable/ellipse47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="316dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/upload_your"
        android:layout_width="134dp"
        android:layout_height="14dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@id/rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="183dp"
        android:text="Upload your prescription"
        android:textColor="@color/black"
        android:textSize="12dp"

        />
    <TextView
        android:id="@+id/order_accor"
        android:layout_width="126dp"
        android:layout_height="9dp"
        app:layout_constraintTop_toTopOf="@id/rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="top"
        android:text="Order according to what prescripted"
        android:layout_marginLeft="60dp"
        android:textSize="10dp"
        android:layout_marginRight="191dp"
        android:layout_marginTop="26dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/upload_now"
        android:layout_width="43dp"
        android:layout_height="9dp"
        app:layout_constraintTop_toTopOf="@id/rectangle_4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="252dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="18dp"
        android:text="@string/upload_now"
        android:textColor="#046854"
        android:textStyle="bold"
         android:textSize="8sp"
        />
    <TextView
        android:id="@+id/don_t_have_"
        android:layout_width="90dp"
        android:layout_height="9dp"
        app:layout_constraintTop_toTopOf="@id/rec43"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="top"
        android:layout_marginTop="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="205dp"
        android:layout_marginBottom="54dp"
        android:text="@string/don_t_have_a_prescription"
        android:textColor="@color/black"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/consult_the"
        android:layout_width="99dp"
        android:layout_height="14dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@id/rec43"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="19dp"
        android:layout_marginRight="196dp"
        android:layout_marginLeft="60dp"
        android:text="Consult the doctor"
        android:textColor="@color/black"
        android:textSize="12dp"
        />

    <TextView
        android:id="@+id/schedule_no"
        android:layout_width="51dp"
        android:layout_height="9dp"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@id/rec43"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="244dp"
        android:layout_marginBottom="18dp"
        android:text="Schedule now"
        android:textSize="8dp"
        android:textColor="#046854"
        android:textStyle="bold"/>

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="316dp"
        android:layout_height="116dp"
        app:layout_constraintTop_toBottomOf="@id/rectangle_6"
       app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rectangle38"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="118dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>