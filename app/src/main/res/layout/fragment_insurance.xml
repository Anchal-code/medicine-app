<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Insurance">
<com.google.android.material.appbar.MaterialToolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title="   Insurance"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    //below code for 1 card
    <View
        android:id="@+id/insurance_v1"
        android:layout_width="316dp"
        android:layout_height="139dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_marginTop="60dp"
        android:layout_marginStart="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        android:elevation="3dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img1"
        app:layout_constraintTop_toTopOf="@id/insurance_v1"
        app:layout_constraintEnd_toEndOf="@id/insurance_v1"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/insurance_v1"
        app:layout_constraintStart_toStartOf="@id/insurance_v1"
        android:layout_marginTop="87dp"
        android:layout_marginStart="90dp"
        app:cornerRadius="45dp"
        android:textColor="@color/white"
        android:text="BUY NEW PLAN"
        android:background="@drawable/insurance_button_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/insurance_v1"
        app:layout_constraintStart_toStartOf="@id/insurance_v1"
        android:text="Comprhensive Health Cover"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/protect_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@id/insurance_v1"
        app:layout_constraintStart_toStartOf="@id/insurance_v1"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:text="Protect yourself and your family"
        android:layout_marginTop="34dp"
        android:layout_marginStart="18dp"
        />
    //below code for second card
    <View
        android:id="@+id/insurance_v2"
        android:layout_width="316dp"
        android:layout_height="139dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insurance_v1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="22dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="22dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img2"
        app:layout_constraintTop_toTopOf="@id/insurance_v2"
        app:layout_constraintEnd_toEndOf="@id/insurance_v2"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="14dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/insurance_v2"
        app:layout_constraintStart_toStartOf="@id/insurance_v2"
        android:layout_marginTop="87dp"
        android:layout_marginStart="90dp"
        app:cornerRadius="45dp"
        android:textColor="@color/white"
        android:text="BUY HEALTH CARD"
        android:background="@drawable/insurance_button_back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/insurance_v2"
        app:layout_constraintStart_toStartOf="@id/insurance_v2"
        android:text="Buy Health Cards"
        android:layout_marginStart="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/insurance_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top"
        app:layout_constraintTop_toTopOf="@id/insurance_v2"
        app:layout_constraintStart_toStartOf="@id/insurance_v2"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:text="Protect yourself and your family"
        android:layout_marginTop="34dp"
        android:layout_marginStart="18dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>